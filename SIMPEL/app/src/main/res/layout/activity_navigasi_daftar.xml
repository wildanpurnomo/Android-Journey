<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6EAED"
    tools:context=".pembuatan_sim_baru.NavigasiDaftarActivity">

    <include
        android:id="@+id/toolbarLayoutNavigasiDaftar"
        layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarLayoutNavigasiDaftar"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:padding="15dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:text="Tahapan Pendaftaran SIM"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="21sp"
            android:textColor="@color/colorSimpel"/>

        <android.support.v7.widget.CardView
            android:id="@+id/CVSIMBaru_contDataDiri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="#E6EAED"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp"
            >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/navigasi_container"
                android:padding="15dp"
                android:layout_margin="7dp">

                <TextView
                    android:id="@+id/TV_DataDiri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Data diri"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_DataDiri2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TV_DataDiri"
                    android:text="Mengisi data diri" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/CVSIMBaru_contBerkas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="#E6EAED"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/navigasi_container"
                android:padding="15dp"
                android:layout_margin="7dp">

                <TextView
                    android:id="@+id/TV_Berkas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Berkas"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_Berkas2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TV_Berkas"
                    android:text="Melengkapi keperluan berkas" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/CVSIMBaru_contVerifikasiBerkas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="#E6EAED"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/navigasi_container"
                android:padding="15dp"
                android:layout_margin="7dp">

                <TextView
                    android:id="@+id/TV_VerifikasiBerkas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Verifikasi Berkas"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_VerifikasiBerkas2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TV_VerifikasiBerkas"
                    android:text="Review kevalidan berkas" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/CVSIMBaru_contJadwalUjian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#E6EAED"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/navigasi_container"
                android:padding="15dp"
                android:layout_margin="7dp">

                <TextView
                    android:id="@+id/TV_JadwalUjian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Jadwal Ujian"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_JadwalUjian2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TV_JadwalUjian"
                    android:text="Konfirmasi tanggal ujian SIM" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>




</RelativeLayout>