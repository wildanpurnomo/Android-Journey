<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nilai Oktan : "
            android:textColor="@color/colorBiruPropo"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/TVdisplayOktanVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBiruPropo"
            android:textSize="15dp"
            tools:text="Angka oktan" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Harga Per Liter : "
            android:textColor="@color/colorBiruPropo"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TVdisplayHargaPerLiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Harga per liter"
            android:textColor="@color/colorBiruPropo"
            android:textSize="15dp"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="7dp"
        android:background="@color/Yellow" />

    <EditText
        android:id="@+id/ETnominalBought"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Nominal yang dibeli"
        android:inputType="number"/>

    <TextView
        android:id="@+id/TVliterGetHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        tools:text="Anda mendapatkan 0 liter"/>
    
    <Button
        android:id="@+id/BTNpurchaseProceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBiruPropo"
        android:text="CONFIRM"
        android:textColor="@color/White"/>


</LinearLayout>