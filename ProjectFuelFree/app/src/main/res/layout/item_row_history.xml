<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TVhistoryCheckProductBought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pertamax"
            android:textColor="@color/colorBiruPropo"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/TVhistoryCheckDateOfTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            tools:text="Tanggal"
            android:textColor="@color/colorBiruPropo"
            android:textSize="15dp"
             />


    </LinearLayout>

    <TextView
        android:id="@+id/TVhistoryCheckToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        tools:text="1234-5678-9218"
        android:textColor="@color/colorBiruPropo"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/TVhistoryCheckNominalBought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        tools:text="Nominal yang dibeli : 10000"
        android:textColor="@color/colorBiruPropo"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/TVhistoryCheckLiterGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        tools:text="Liter yang didapat : 10 liter"
        android:textColor="@color/colorBiruPropo"
        android:textSize="15dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="7dp"
        android:background="@color/Yellow" />


</LinearLayout>